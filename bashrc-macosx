# -*- sh -*-
#
# ~/.bashrc-macosx - OSX SH shell config

if [ -d /opt/local/bin ]; then
	PATH=$PATH:/opt/local/bin
fi


if [ -r /sw/bin/init.sh ]; then	# Fink
	source /sw/bin/init.sh
fi

if [ -d /opt/local/bin ]; then	# Mac Ports
	PATH=/opt/local/bin:$PATH
fi

if [ -d /opt/local/sbin ]; then	# Mac Ports
	PATH=$PATH:/opt/local/sbin
fi

if which -s gdircolors; then
	dircolors="gdircolors"
	colorls="--color"
elif which -s dircolors; then
	dircolors="dircolors"
	colorls="--color"
else
	dircolors=
fi

if which -s gls; then
	ls="gls"
else
	ls="ls"
fi



if [ $dircolors ]; then
	eval `$dircolors -b "${HOME}/.dircolors"`
fi


